<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD
3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
<session-factory>
<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="connection.url">jdbc:mysql://127.0.0.1:3306/bdvtv</property><!-- Agregar los datos del servidor y el nombre de la base de datos -->
<property name="connection.username">root</property> <!--Usuario de la bd -->
<property name="connection.password">root</property><!--ContraseÃ±a de la bd -->
<property name="connection.pool_size">1</property>
<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="show_sql">true</property> <!-- en true muestra hql en consola-->
<!--Mapeo Entidades -->
<!-- Agregar los mapeos de las entidades -->
<!-- Ejemplo <mapping resource="mapeos/Cliente.hbm.xml"/> -->
<mapping resource="mapeos/Persona.hbm.xml"/>
<mapping resource="mapeos/Automotor.hbm.xml"/>
<mapping resource="mapeos/Inspeccion.hbm.xml"/>
</session-factory>
</hibernate-configuration>